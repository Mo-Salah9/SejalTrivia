# Server Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/trivia-game

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-use-openssl-rand-base64-32
JWT_EXPIRES_IN=7d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Apple IAP
APPLE_SHARED_SECRET=your-apple-shared-secret

# CORS - Allowed Origins (comma separated)
ALLOWED_ORIGINS=http://localhost:5173,capacitor://localhost,ionic://localhost,http://localhost:3000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# App Settings
INITIAL_FREE_GAMES=3

# Optional: Email Service (for password reset)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@yourdomain.com
